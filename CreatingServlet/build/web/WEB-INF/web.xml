<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <!--welcome file list-->
    <welcome-file-list>
        <welcome-file>
            Home.html
        </welcome-file>
        <welcome-file>
            index.html
        </welcome-file>
    </welcome-file-list>
    <!--servlet declaration-->
    <servlet>
        <servlet-name>
            CreatingFirstServlet
        </servlet-name>
        <servlet-class>
            com.servlets.FirstServlet
        </servlet-class>
    </servlet>
    <!--for generic class-->
    <servlet>
        <servlet-name>
            CreatingServletUsingGenericClass
        </servlet-name>
        <servlet-class>
            com.servlets.CreateServletUsingGenericServletClass
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>
            CreatingServletUsingHttpServlet
        </servlet-name>
        <servlet-class>
            com.servlets.CreateServletUsingHttpServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>
            FormServlet
        </servlet-name>
        <servlet-class>
            com.servlets.FormInServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>
            RequestDispatcher
        </servlet-name>
        <servlet-class>
            com.servlets.ForwardRequestDispatcher
        </servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>LearningAttributeFirstServlet</servlet-name>
        <servlet-class>com.servlets.LearningAttributeFirstServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LearningAttributeSecondServlet</servlet-name>
        <servlet-class>com.servlets.LearningAttributeSecondServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CookieFirstServlet</servlet-name>
        <servlet-class>com.servlets.CookieFirstServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CookieSecondServlet</servlet-name>
        <servlet-class>com.servlets.CookieSecondServlet</servlet-class>
    </servlet>
    
    <!--mapping declaration-->
    <servlet-mapping>
        <servlet-name>
            CreatingFirstServlet
        </servlet-name>
        <url-pattern>/web</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>
            CreatingServletUsingGenericClass
        </servlet-name>
        <url-pattern>/genericclass</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>
            CreatingServletUsingHttpServlet
        </servlet-name>
        <url-pattern>/httpservlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>
            FormServlet
        </servlet-name>
        <url-pattern>/FormInServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>
            RequestDispatcher
        </servlet-name>
        <url-pattern>/RequestDispatcher</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LearningAttributeFirstServlet</servlet-name>
        <url-pattern>/LearningAttributeFirstServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LearningAttributeSecondServlet</servlet-name>
        <url-pattern>/LearningAttributeSecondServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CookieFirstServlet</servlet-name>
        <url-pattern>/CookieFirstServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CookieSecondServlet</servlet-name>
        <url-pattern>/CookieSecondServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
