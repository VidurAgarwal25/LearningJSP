<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <!--servlet declaration-->
    <servlet>
        <servlet-name>
            CreatingFirstServlet
        </servlet-name>
        <servlet-class>
            com.servlets.FirstServlet
        </servlet-class>
    </servlet>
    <!--for generic class-->
    <servlet>
        <servlet-name>
            CreatingServletUsingGenericClass
        </servlet-name>
        <servlet-class>
            com.servlets.CreateServletUsingGenericServletClass
        </servlet-class>
    </servlet>
    
    
    <servlet>
        <servlet-name>
            CreatingServletUsingHttpServlet
        </servlet-name>
        <servlet-class>
            com.servlets.CreateServletUsingHttpServlet
        </servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>
            FormServlet
        </servlet-name>
        <servlet-class>
            com.servlets.FormInServlet
        </servlet-class>
    </servlet>
    
    <!--mapping declaration-->
    <servlet-mapping>
        <servlet-name>
            CreatingFirstServlet
        </servlet-name>
        <url-pattern>/web</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>
            CreatingServletUsingGenericClass
        </servlet-name>
        <url-pattern>/genericclass</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>
            CreatingServletUsingHttpServlet
        </servlet-name>
        <url-pattern>/httpservlet</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>
            FormServlet
        </servlet-name>
        <url-pattern>/FormInServlet</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
